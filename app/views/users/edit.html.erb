<div class="container">
  <div class="row">
    <div class="col-sm col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, autofocus: true, class: "form-control name", placeholder: "名前" %>
      </div>
      <div class="form-group">
        <%= f.label :image, "Image" %>
        <%= f.file_field :image, class: "form-control-file user_image", accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, "Introduction" %>
        <%= f.text_field :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
