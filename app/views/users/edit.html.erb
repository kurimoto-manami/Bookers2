<div class="container">
  <div class="row">
    <div class="col-sm col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      <div class="form">
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前" %>
      </div>
      <div class="form">
        <label for="inputImage">Image</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="form">
        <label for="inputText">Introduction</label>
        <%= f.text_field :introduction %>
      </div>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>
