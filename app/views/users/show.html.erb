<h2>User info</h2>

  <% @books.each do |book| %>
  <div>
    <%= image_tag @user.get_profile_image(100,100) %>
    <table>
      <tbody>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <%= link_to edit_user_path(@user.id) do, class: "btn btn-outline-secondary btn-block" %>
      <i class="fa-solid fa-user-gear"></i>
      <% end %>

    </div>
  </div>

  <% end %>
