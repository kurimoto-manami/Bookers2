<div>
  <%= flash[:notice] %>
</div>
<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  
  <table class="table">
    <tbody>
      <tr>
        <td>
          <%= image_tag @book.user.get_profile_image(100,100) %><br>
            <%= @user.name %>

        </td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>]
          <%= link_to "Edit", book_path(@book.id), class: "btn-btn-sm btn-success" %>

          <%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger destroy_book", method: :delete %>

        <% end %>
      </tr>
    </tbody>
  </table>
</div>
